            diagonal:diagonal_angle="10"
            diagonal:diagonal_gravity="right">


            <com.flaviofaria.kenburnsview.KenBurnsView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
